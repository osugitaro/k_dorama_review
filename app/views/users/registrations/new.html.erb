<% set_meta_tags title: "新規登録" %>
<% content_for(:color, 'sigup-nav-color') %>
<section class="page-section" id="SignUp">
	<div class="container px-4 px-lg-5">
		<div class="row gx-4 gx-lg-5 justify-content-center">
			<div class="col-lg-8 col-xl-6 text-center">
				<h2 class="mt-0">新規登録</h2>
				<hr class="divider" />
			</div>
		</div>
		<div class="row gx-4 gx-lg-5 justify-content-center mb-5">
			<div class="col-lg-6">
				<%= form_with model: @user, url: user_registration_path, method: :post do |f| %>
				<%= render "shared/error_messages", object: f.object %>
					<div class="form-floating mb-3">
						<%= f.text_field :name, placeholder: "username", id: "name", class: "form-control", required: true %>
						<%= f.label :name, "名前" %>
					</div>
					<div class="form-floating mb-3">
						<%= f.text_field :email, placeholder: "email", id: "email", class: "form-control", required: true, pattern: "[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$"  %>
						<%= f.label :email, "メールアドレス" %>
					</div>
					<div class="form-floating mb-3">
						<%= f.password_field :password, placeholder: "パスワード", class: "form-control", id: "password", required: true, pattern: "^([a-zA-Z0-9]{6,})$"  %>
						<%= f.label :password, "パスワード(半角英数字6文字以上)" %>
					</div>
					<div class="d-grid">
						<%= button_tag(type: "submit", class: "btn btn-primary btn-xl") do %>
							登録
						<% end %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</section>
